{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rapid-toolbox",
  "version": "1.1.0",
  "identifier": "com.wintp.rapid-toolbox",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rapid Toolbox",
        "width": 1025,
        "height": 600,
        "decorations": false,
        "resizable": false,
        "dragDropEnabled": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
